<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ImgPet1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/cat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAppTitle"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        />

    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello My Animal App"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:id="@+id/tvPetName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:text="TextView"
        android:textSize="17dp"
        app:layout_constraintStart_toEndOf="@+id/ImgPet1"
        app:layout_constraintTop_toBottomOf="@+id/tvAppTitle" />

    <TextView
        android:id="@+id/tvPetName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:text="TextView"
        android:textSize="17dp"
        app:layout_constraintStart_toEndOf="@+id/ImgPet1"
        app:layout_constraintTop_toBottomOf="@+id/tvAppTitle"
        android:layout_marginTop="88dp"/>

    <TextView
        android:id="@+id/tvPetName3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:text="TextView"
        android:textSize="17dp"
        app:layout_constraintStart_toEndOf="@+id/ImgPet1"
        app:layout_constraintTop_toBottomOf="@+id/tvAppTitle"
        android:layout_marginTop="176dp"/>

    <TextView
        android:id="@+id/tvPetDesc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:text="TextView"
        android:textSize="12dp"
        app:layout_constraintEnd_toStartOf="@+id/btnPet1"
        app:layout_constraintStart_toEndOf="@+id/ImgPet1"
        app:layout_constraintTop_toBottomOf="@+id/tvPetName1"/>

    <TextView
        android:id="@+id/tvPetDesc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:text="TextView"
        android:textSize="12dp"
        app:layout_constraintEnd_toStartOf="@+id/btnPet1"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toEndOf="@+id/ImgPet1"
        app:layout_constraintTop_toBottomOf="@+id/tvPetName1" />

    <TextView
        android:id="@+id/tvPetDesc3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="176dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:text="TextView"
        android:textSize="12dp"
        app:layout_constraintEnd_toStartOf="@+id/btnPet1"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toEndOf="@+id/ImgPet1"
        app:layout_constraintTop_toBottomOf="@+id/tvPetName1" />

    <Button
        android:id="@+id/btnPet1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="Details"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvAppTitle" />

    <Button
        android:id="@+id/btnPet2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="20dp"
        android:text="Details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAppTitle" />

    <Button
        android:id="@+id/btnPet3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="20dp"
        android:text="Details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAppTitle" />

    <ImageView
        android:id="@+id/ImgPet2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImgPet1"
        app:srcCompat="@drawable/dog" />

    <ImageView
        android:id="@+id/imgPet3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImgPet2"
        app:srcCompat="@drawable/bird"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>